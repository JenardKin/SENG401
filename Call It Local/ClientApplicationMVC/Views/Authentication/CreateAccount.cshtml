<!--
    This is the html page that opens when a user navigates
    to the create an account page
-->
@{
    ViewBag.Title = "Create Account";
}

<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>

<h2>@ViewBag.Title</h2>

<p>@ViewBag.Message</p>

<!-- Form for user creating account in -->
@using (Html.BeginForm("UserCreateAccount", "Authentication", FormMethod.Get,
    new { id = "createAccountForm", onsubmit = "return validateCreateAccountForm()" }))
{
    <!-- All relevant fields and radio buttons -->
    <p>
        Enter your desired username<br />
        @Html.TextBox("username")<br />
        Enter your password (Cannot be empty)<br />
        @Html.Password("password")<br />
        Enter your address (Cannot be empty)<br />
        @Html.TextBox("address")<br />
        Enter your phone number (Cannot be empty)<br />
        @Html.TextBox("phonenumber")<br />
        Enter your email (Cannot be empty)<br />
        @Html.TextBox("email")<br />
        Select account type<br />
        <input type="radio" name="accountType" value="user" checked> User<br />
        <input type="radio" name="accountType" value="business"> Buisness<br />
        <input type="radio" name="accountType" value="notspecified"> Not Specified<br />
    </p>
    <!-- Submission button and response -->
    <input type="submit" value="Create Account" />
    <br />
    <h2 id="response">@ViewBag.CreateAccountResponse</h2>
    <br />
}

<!-- Form for user going to log in page -->
@using (Html.BeginForm("Index", "Authentication", FormMethod.Get))
{
    <input type="submit" value="Log in" />
}